{
  "name": "@hadeshe93/lib",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=development esno scripts/build.ts",
    "buildProd": "cross-env NODE_ENV=production esno scripts/build.ts",
    "build:common": "npm run build common",
    "buildProd:common": "npm run buildProd common",
    "changeset": "changeset",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "changeset publish",
    "lint": "eslint ./ --ext .ts,.js",
    "lint:fix": "npm run lint -- --fix",
    "save": "git add --all && git commit -m 'feat: 更新代码' && git push origin main",
    "test": "jest",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "version": "0.0.1",
  "description": "A lib",
  "main": "index.js",
  "author": "hadeshe",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/changelog-github": "^0.4.5",
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^15.6.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "chalk": "^4.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-alloy": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "esno": "^0.14.1",
    "execa": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^27.0.1",
    "jest-html-reporters": "^2.1.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "prettier": "^2.3.0",
    "rollup": "^2.50.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "^7.18.3",
    "core-js": "^3"
  },
  "engines": {
    "node": ">=14"
  }
}
