  "version": "0.2.0",
  "configurations": [
    {
      "name": "[common] Debug Build",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build", "common"]
    },
    {
      "name": "[vice-cli] Debug Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "--filter",
        "@hadeshe93/vice-cli",
        "run",
        "dev",
        "create",
        "app-pages"
      ]
    },
    {
      "name": "[vice-cli] Debug Docs",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "--filter",
        "@hadeshe93/lib-docs",
        "dev"
      ]
    }
  ]
}